{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "es6",
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "../.build/engine/",
    "types": ["three", "wad", "tone"],
    "paths": {
      "wad": ["../.build/wad"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
