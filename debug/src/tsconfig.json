{
	"compileOnSave": true,
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"target": "es5",
		"removeComments": true,
		"declaration": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"traceResolution": true,
		"outDir": "../../.build/debug/",
		"typeRoots": [
			"../../.build/",
			"./node_modules/@types/"
		],
		"baseUrl": ".",
		"paths": {
			"engine": ["../../.build/engine"],
			"wad": ["../../.build/wad"]
		},
		"types": [
			"wad",
			"engine",
			"react",
			"react-dom"
		],
		"lib": ["es5", "dom", "es2015.iterable"]
	},
	"include": [
		"./**/*"
	],
	"exclude": [
		"**/index.d.ts",
		"**/node_modules/*"
	]
}