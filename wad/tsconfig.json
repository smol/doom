{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "classic",
		"removeComments": true,
		"declaration": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "../.build/wad/",
		"lib": ["es5", "dom", "es2015.iterable"],
		"baseUrl": "."
	},
	"exclude": [
		"node_modules"
	],
	"files": [
		"src/index.ts"
	]
}